<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/groupchat_listview"
        android:layout_width="match_parent"
        android:layout_height="244dp" >

    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

		<EditText
        	android:id="@+id/groupchat_message_edittext"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:ems="10" >
        	<requestFocus />
    	</EditText>
    


    </LinearLayout>
    
            <Button
                android:id="@+id/groupchat_send_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Groupchatsendbutton" />

            <Button
                android:id="@+id/groupchat_edit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Groupchateditbutton" />
            
</LinearLayout>
